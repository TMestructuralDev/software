
<HomeScreen>:

    MDBoxLayout:
        orientation: "vertical"
        padding: 10
        canvas.before:
            Color:
                rgba: 50/255, 50/255, 50/255, 1
            Rectangle:
                pos: self.pos
                size: self.size 

        MDRaisedButton:
            text: "Estructural"
            font_style: "Button"
            font_size: "64sp"
            bold: True
            shadow_color: [0, 0, 0, 0.6]
            size_hint_x: 1 
            size_hint_y: 1  
            pos_hint: {"center_x": 0.5}
            height: "50dp"  
            md_bg_color: 247/255, 53/255, 15/255, 1
            text_color: 220/255, 220/255, 220/255, 1
            ripple: True 
            on_release: root.go_to_estructural()

        Image:
            source: "media/logo_empresa.png"  
            size_hint: None, None
            size: "200dp", "200dp"  
            pos_hint: {"center_x": 0.5} 

        MDRaisedButton:
            text: "Gr√∫as"
            font_style: "Button"
            font_size: "64sp"
            bold: True
            shadow_color: [0, 0, 0, 0.6]
            size_hint_x: 1 
            size_hint_y: 1  
            pos_hint: {"center_x": 0.5}
            height: "50dp" 
            md_bg_color: 247/255, 53/255, 15/255, 1
            text_color: 220/255, 220/255, 220/255, 1 
            ripple: True 
            on_release: root.go_to_nota_gruas()

