
<HomeScreen>:
    md_bg_color: 50/255, 50/255, 50/255, 1

    MDBoxLayout:
        orientation: "vertical"
        padding: 20

        MDCard:
            style: "elevated"
            size_hint: 1, .33 
            pos_hint: {"center_x": 0.5}
            theme_shadow_color: "Custom"
            shadow_color: [0, 0, 0, 0.6]
            theme_bg_color: "Custom"  
            md_bg_color: 247/255, 53/255, 15/255, 1
            ripple: True 
            on_release: root.go_to_estructural()

            MDRelativeLayout:

                MDLabel:
                    text: "ALMACEN"
                    adaptive_size: True
                    theme_font_size: "Custom"
                    font_size: max(self.width * 0.1, 40)
                    color: 1, 1, 1, 1
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    bold: True


        Image:
            source: "media/logo_empresa.png"  
            size_hint: None, None
            size: "200dp", "200dp"  
            pos_hint: {"center_x": 0.5} 

        MDCard:
            style: "elevated"
            size_hint: 1, .33 
            pos_hint: {"center_x": 0.5}
            theme_shadow_color: "Custom"
            shadow_color: [0, 0, 0, 0.6]
            theme_bg_color: "Custom"  
            md_bg_color: 247/255, 53/255, 15/255, 1
            ripple: True  
            on_release: root.go_to_nota_gruas()

            MDRelativeLayout:

                MDLabel:
                    text: "GRUAS"
                    adaptive_size: True
                    theme_font_size: "Custom"
                    font_size: max(self.width * 0.1, 40)
                    color: 1, 1, 1, 1
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    bold: True

