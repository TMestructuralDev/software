
<HomeScreen>:

    MDBoxLayout:
        orientation: "vertical"
        padding: 10
        spacing: 20
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size 

        MDRaisedButton:
            text: "Estructural"
            font_style: "Button"
            font_size: "64sp"
            bold: True
            # shadow_color: [247/255, 53/255, 15/255, 1]
            size_hint_x: .55 
            size_hint_y: 1  
            pos_hint: {"center_x": 0.5}
            height: "50dp"  
            md_bg_color: 247/255, 53/255, 15/255, 1
            text_color: 30/255, 30/255, 30/255, 1
            on_release: root.go_to_estructural()

        Image:
            source: "media/logo_empresa.png"  # Asegúrate de que el archivo logo.png esté en el directorio adecuado
            size_hint: None, None
            size: "200dp", "200dp"  # Ajusta el tamaño del logo según lo necesites
            pos_hint: {"center_x": 0.5}  # Centra el logo horizontalmente en el layout

        MDRaisedButton:
            text: "Grúas"
            font_style: "Button"
            font_size: "64sp"
            bold: True
            # shadow_color: [247/255, 53/255, 15/255, 1]
            size_hint_x: .55 
            size_hint_y: 1  
            pos_hint: {"center_x": 0.5}
            height: "50dp" 
            md_bg_color: 247/255, 53/255, 15/255, 1
            text_color: 30/255, 30/255, 30/255, 1 
            on_release: root.go_to_nota_gruas()
