
<EstructuralScreen>:

    MDBoxLayout:
        orientation: "vertical"
        adaptive_height: True
        size_hint: 1, 1
        height: Window.height

        canvas.before:
            Color:
                rgba: 50/255, 50/255, 50/255, 1
            Rectangle:
                pos: self.pos
                size: self.size
        
        MDBoxLayout:
            orientation: "vertical"
            size_hint: 1, 1
            padding: "10dp"
            shadow_color: [0, 0, 0, 0.6]
            pos_hint: {"center_x": 0.5}
        
            MDLabel:
                text: "Pantalla Estructural"
                halign: "center"
                size_hint: 1, .5

            MDRaisedButton:
                text: "Volver"
                size_hint: 1, .5
                md_bg_color: 247/255, 53/255, 15/255, 1
                shadow_color: [0, 0, 0, 0.6]
                text_color: 1, 1, 1, 1
                font_style: "Button"
                ripple: True
                on_release: app.root.current = "home_screen"