
<EstructuralScreen>:
    md_bg_color: 50/255, 50/255, 50/255, 1

    MDGridLayout:
        #orientation: "vertical"
        cols: 1
        size_hint: 1, 1
        height: self.minimum_height

        MDExpansionPanel:
            id: pedido
            pos_hint: {"center_x": .5}
            size_hint: 1, None

            MDExpansionPanelHeader:

                MDListItem:
                    text: "Panel 1 - Informaci√≥n"
                    theme_bg_color: "Custom"
                    md_bg_color: 1, 0, 0, 1
                    ripple_effect: True

                    MDListItemSupportingText:
                        text: "Expansion panel 1"
                        theme_text_color: "Custom"
                        color: 1, 1, 1, 1
                    
                    TrailingPressedIconButton:
                        id: chevron
                        icon: "chevron-right"
                        on_release: root.open_expansion_chevron(pedido, chevron)

            MDExpansionPanelContent:
                orientation: "vertical"
                padding: "12dp"
                size_hint_y: None
                height: self.minimum_height

                ScrollView:
                    size_hint: 1, None
                    pos_hint: {"center_x": .5, "center_y": .5}

                    MDBoxLayout:
                        orientation: "vertical"
                        size_hint_y: None
                        height: self.minimum_height
                        padding: "10dp"
                        spacing: "10dp"

                        MDLabel:
                            text: "Contenido del primer panel"
                            adaptive_height: True
                            padding: "16dp"
                            theme_text_color: "Custom"
                            color: 1, 1, 1, 1

                        MDListItem:

                            MDListItemLeadingIcon:
                                icon: "email"

                            MDListItemHeadlineText:
                                text: "Email"

                            MDListItemSupportingText:
                                text: "kivydevelopment@gmail.com"

                        MDListItem:

                            MDListItemLeadingIcon:
                                icon: "instagram"

                            MDListItemHeadlineText:
                                text: "Instagram"

                            MDListItemSupportingText:
                                text: "Account"

                            MDListItemTertiaryText:
                                text: "www.instagram.com/KivyMD"
                    
########

