<LoginScreen>:
    md_bg_color: 50/255, 50/255, 50/255, 1
    
    MDFloatLayout:

        MDCard:
            size_hint: None, None
            size: 300, 400
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 10
            padding: "20dp"
            spacing: "20dp"
            orientation: 'vertical'

            Image:
                source: "media/logo_empresa.png"  
                size_hint: None, None
                size: "200dp", "200dp"  
                pos_hint: {"center_x": 0.5} 

        
            MDTextField:
                id: username
                hint_text: "Usuario"
                icon_right: "account"
                size_hint_x: 0.8
                pos_hint: {"center_x": 0.5}
            
            MDTextField:
                id: password
                hint_text: "Contrase√±a"
                icon_right: "eye-off"
                password: True
                size_hint_x: 0.8
                pos_hint: {"center_x": 0.5}

            MDButton:
                style: "elevated"
                pos_hint: {"center_x": 0.5}
                on_release: root.login()

                MDButtonText:
                    text: "INGRESAR"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1  
                    font_style: "Display"
                    theme_font_size: "Custom"
                    font_size: "24sp"
