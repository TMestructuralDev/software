<TextFieldPersonalizado@MDTextField>:
    size_hint: 1, None
    mode: "rectangle"
    theme_text_color: "Custom"
    hint_text_color_normal: 1, 1, 1, 1  
    hint_text_color_focus: 247/255, 53/255, 15/255, 1  
    text_color: 1, 1, 1, 1  # Color del texto ingresado
    line_color_focus: 247/255, 53/255, 15/255, 1  
    line_color_normal: 1, 1, 1, 1  
    text_color_normal: 247/255, 53/255, 15/255, 1  
    theme_text_color: "Custom"
    width: min(400, Window.width * 0.9)


<NotaGruasScreen>:
    MDBoxLayout:
        orientation: "vertical"
        adaptive_height: True
        size_hint: 1, 1
        height: Window.height

        canvas.before:
            Color:
                rgba: 50/255, 50/255, 50/255, 1
            Rectangle:
                pos: self.pos
                size: self.size
                

        MDBoxLayout:
            orientation: "horizontal"
            size_hint: 1, .10
            padding: "10dp"
            pos_hint: {"center_x": 0.6}

            MDLabel:
                text: "Nota"
                halign: "left"
                size_hint: .5, None
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1  
                font_style: "H3"
                pos_hint: {"center_y": 0.5} 
            
            Image:
                source: "media/logo_empresa.png"
                size_hint: .5, None
                size: "50dp", "50dp"
                allow_stretch: True 
                keep_ratio: True
                pos_hint: {"center_y": 0.5}

        MDBoxLayout:
            orientation: "vertical"
            size_hint: 1, .10  
            padding: "10dp"
            shadow_color: [0, 0, 0, 0.6]
            pos_hint: {"center_x": 0.5}

            MDRaisedButton:
                text: "Volver"
                size_hint: 1, None
                md_bg_color: 247/255, 53/255, 15/255, 1
                shadow_color: [0, 0, 0, 0.6]
                text_color: 1, 1, 1, 1
                font_style: "Button"
                ripple: True
                on_release: app.root.current = "home_screen"

        MDScrollView:
            do_scroll_x: False
            do_scroll_y: True
            size_hint: 1, None 
            height: Window.height * 0.5

            MDGridLayout:
                cols: 1
                spacing: "10dp"
                size_hint_y: None
                height: self.minimum_height 
                padding: "10dp"

                TextFieldPersonalizado:
                    id: cliente
                    hint_text: "Cliente"
                    size_hint_y: None
                    height: 40

                TextFieldPersonalizado:
                    id: telefono
                    hint_text: "Teléfono"
                    size_hint_y: None
                    height: 40

                TextFieldPersonalizado:
                    id: fecha
                    hint_text: "Fecha"
                    size_hint_y: None
                    height: 40
                    on_focus: root.show_date_picker(self) if self.focus else None
                    text: root.fecha

                TextFieldPersonalizado:
                    id: empresa
                    hint_text: "Empresa"
                    size_hint_y: None
                    height: 40

                TextFieldPersonalizado:
                    id: ubicacion
                    hint_text: "Ubicación"
                    size_hint_y: None
                    height: 40

                TextFieldPersonalizado:
                    id: equipo
                    hint_text: "Equipo"
                    size_hint_y: None
                    height: 40

                TextFieldPersonalizado:
                    id: operador
                    hint_text: "Operador"
                    size_hint_y: None
                    height: 40

                TextFieldPersonalizado:
                    id: ayudante
                    hint_text: "Ayudante"
                    size_hint_y: None
                    height: 40

                TextFieldPersonalizado:
                    id: trabajo_realizado
                    hint_text: "Trabajo Realizado"
                    size_hint_y: None
                    height: 40

                TextFieldPersonalizado:
                    id: hora_salida
                    hint_text: "Hora de Salida"
                    size_hint_y: None
                    height: 40
                    on_focus: if self.focus: root.show_time_picker(self)
                    text: root.hora_salida

                TextFieldPersonalizado:
                    id: hora_llegada
                    hint_text: "Hora de Llegada"
                    size_hint_y: None
                    height: 40
                    on_focus: if self.focus: root.show_time_picker(self)
                    text: root.hora_llegada

                TextFieldPersonalizado:
                    id: hora_termino
                    hint_text: "Hora de Termino"
                    size_hint_y: None
                    height: 40
                    on_focus: if self.focus: root.show_time_picker(self)
                    text: root.hora_termino

                TextFieldPersonalizado:
                    id: hora_regreso
                    hint_text: "Hora de Regreso"
                    size_hint_y: None
                    height: 40
                    on_focus: if self.focus: root.show_time_picker(self)
                    text: root.hora_regreso

                TextFieldPersonalizado:
                    id: costo_hora
                    hint_text: "Costo por Hora"
                    size_hint_y: None
                    height: 40

        MDBoxLayout:
            orientation: "vertical"
            size_hint: 1, .10 
            pos_hint: {"center_x": 0.5}

            MDLabel:
                id: error
                text: ""
                halign: "center"
                size_hint: 1, .5
                theme_text_color: "Custom"
                text_size: self.width, None
                markup: True

        MDRaisedButton:
            text: "Enviar Nota"
            size_hint: 1, .10
            padding: "10dp"
            md_bg_color: 247/255, 53/255, 15/255, 1
            shadow_color: [0, 0, 0, 0.6]
            text_color: 1, 1, 1, 1  
            font_style: "Button"
            on_release: root.enviar_datos()
