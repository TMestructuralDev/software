<TextFieldPersonalizado@MDTextField>:
    size_hint: 1, None
    height: 40
    mode: "rectangle"
    theme_text_color: "Custom"
    hint_text_color_normal: 1, 1, 1, 1  # Naranja
    hint_text_color_focus: 247/255, 53/255, 15/255, 1  # Naranja
    text_color: 1, 1, 1, 1  # Color del texto ingresado
    line_color_focus: 247/255, 53/255, 15/255, 1  # Color de la línea al enfocarse
    line_color_normal: 1, 1, 1, 1  # Color de la línea normal
    text_color_normal: 247/255, 53/255, 15/255, 1  # Color del texto cuando no está enfocado
    theme_text_color: "Custom"
    

<NotaGruasScreen>:
    MDBoxLayout:
        orientation: "vertical"
        adaptive_height: True
        padding: 20
        spacing: 20

        canvas.before:
            Color:
                rgba: 50/255, 50/255, 50/255, 1
            Rectangle:
                pos: self.pos
                size: self.size
                
        MDBoxLayout:
            orientation: "horizontal"
            spacing: "10dp"
            size_hint_y: None
            height: "50dp"
            pos_hint: {"center_x": 0.5}

            MDLabel:
                text: "Crear Nota de Grúas"
                halign: "center"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1  # Blanco (RGBA)
                font_style: "H3"
            
            Image:
                source: "media/logo_empresa.png"
                size_hint: .5, .5
                size: "100dp", "100dp"
                allow_stretch: True 
                keep_ratio: True

        MDRaisedButton:
            text: "Volver"
            size_hint: None, None
            size: "200dp", "50dp"
            md_bg_color: 247/255, 53/255, 15/255, 1  
            text_color: 1, 1, 1, 1  
            on_release: app.root.current = "home" 

        GridLayout:
            cols: 2
            spacing: 10
            size_hint_y: None
            height: self.minimum_height

            TextFieldPersonalizado:
                id: cliente
                hint_text: "Cliente"
                size_hint: 1, None
                height: 40

            TextFieldPersonalizado:
                id: telefono
                hint_text: "Teléfono"
                size_hint: 1, None
                height: 40
                
            TextFieldPersonalizado:
                id: fecha
                hint_text: "Fecha"
                size_hint: 1, None
                height: 40
                on_focus: root.show_date_picker(self) if self.focus else None
                text: root.fecha  # Esto se actualizará dinámicamente

            TextFieldPersonalizado:
                id: empresa
                hint_text: "Empresa"
                size_hint: 1, None
                height: 40

            TextFieldPersonalizado:
                id: ubicacion
                hint_text: "Ubicación"
                size_hint: 1, None
                height: 40

            TextFieldPersonalizado:
                id: equipo
                hint_text: "Equipo"
                size_hint: 1, None
                height: 40

            TextFieldPersonalizado:
                id: operador
                hint_text: "Operador"
                size_hint: 1, None
                height: 40

            TextFieldPersonalizado:
                id: ayudante
                hint_text: "Ayudante"
                size_hint: 1, None
                height: 40

            TextFieldPersonalizado:
                id: trabajo_realizado
                hint_text: "Trabajo Realizado"
                size_hint: 1, None
                height: 40

            TextFieldPersonalizado:
                id: hora_salida
                hint_text: "Hora de Salida"
                size_hint: 1, None
                height: 40
                on_focus: if self.focus: root.show_time_picker(self)
                text: root.hora_salida

            TextFieldPersonalizado:
                id: hora_llegada
                hint_text: "Hora de Llegada"
                size_hint: 1, None
                height: 40
                on_focus: if self.focus: root.show_time_picker(self)
                text: root.hora_llegada

            TextFieldPersonalizado:
                id: hora_termino
                hint_text: "Hora de Termino"
                size_hint: 1, None
                height: 40
                on_focus: if self.focus: root.show_time_picker(self)
                text: root.hora_termino

            TextFieldPersonalizado:
                id: hora_regreso
                hint_text: "Hora de Regreso"
                size_hint: 1, None
                height: 40
                on_focus: if self.focus: root.show_time_picker(self)
                text: root.hora_regreso

            TextFieldPersonalizado:
                id: costo_hora
                hint_text: "Costo por Hora"
                size_hint: 1, None
                height: 40

        MDLabel:
            id: error
            text: ""
            halign: "center"
            theme_text_color: "Custom"
            text_size: self.width, None
            markup: True  

            
        MDRaisedButton:
            text: "Enviar Nota"
            size_hint: None, None
            size: "200dp", "50dp"
            md_bg_color: 247/255, 53/255, 15/255, 1 
            text_color: 1, 1, 1, 1  
            on_release: root.enviar_datos()

    